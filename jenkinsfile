pipeline {
    agent any

    stages {
        stage ('checkout') {     
           steps {
              git branch: 'main', url: 'https://github.com/rajarammohan0203/jenkins-terraform-prowler.git'
           }
    }

       stage ("terraform init") {
        steps {
             sh ('terraform init')
        }
    }
       stage ("terraform validate") {
        steps {
             sh ('terraform validate')
        }
    }
    
    stage ("terraform plan") {
        steps {
             sh ('terraform plan')
        }
    }

       stage ("terraform Action") {  
         steps {
            echo "Terraform action is --> ${action}"
            sh ('terraform ${action} --auto-approve')
         }
    }
    stage('clean-workspace') { 
            steps {
                
                sh 'sudo rm -rf prowler/'
                sh 'echo "clean complete"'
            }
    }
    stage('Git-Clone') { 
            steps {

                sh 'git clone https://github.com/prowler-cloud/prowler'
                sh 'echo "clone complete"'
            }
    }
    stage("Prowler-scan"){
           steps{
             withCredentials([[
                $class: 'AmazonWebServicesCredentialsBinding',
                credentialsId: 'aws-cli-prowler' ,
                accessKeyVariable: 'AWS_ACCESS_KEY_ID' ,
                secretKeyVariable: 'AWS_SECRET_ACCESS_KEY']]) 
                {
                   sh '''
                    echo "prowler-exe"
                    ls -lah
                    cd  /var/lib/jenkins/workspace/prowler-terraform/prowler/
                    ./prowler -c check22 -r us-east-1 -M csv -B aws-raja-emr-output/prowler/
                '''
                }
           }
     }
     
    stage('Email') {
            steps {
                sh "cd /var/lib/jenkins/workspace/prowler-terraform/prowler/output"
                sh 'pwd'
                sh 'echo "Report generate"'
                    }
            }
    }
        post {
            always{
                sh "cd /var/lib/jenkins/workspace/prowler-terraform/prowler/output"
                archiveArtifacts artifacts: '**/*.csv', onlyIfSuccessful: true
                
                emailext to: "rajaram.s@cloudifyops.com",
                subject: "jenkins build:${currentBuild.currentResult}: ${env.JOB_NAME}",
                body: "${currentBuild.currentResult}: Job ${env.JOB_NAME}\nMore Info can be found here: ${env.BUILD_URL}",
                attachmentsPattern: '*.csv'
                
                
            
            }
   
    }

}
